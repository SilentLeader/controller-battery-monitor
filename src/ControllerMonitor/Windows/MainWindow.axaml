<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ControllerMonitor.ViewModels"
        xmlns:views="clr-namespace:ControllerMonitor.Views"
        xmlns:vo="clr-namespace:ControllerMonitor.ValueObjects"
        xmlns:ext="clr-namespace:ControllerMonitor.Extensions"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="ControllerMonitor.Windows.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Controller Monitor"
        MinWidth="640"
        MinHeight="520"
        >
    <Window.Icon>
        <MultiBinding Converter="{StaticResource BatteryLevelToIconConverter}">
            <Binding Path="ControllerInfo.BatteryInfo.Level" />
            <Binding Path="ControllerInfo.BatteryInfo.Status" />
            <Binding Path="ThemeVariant" />
        </MultiBinding>
    </Window.Icon>

    <TabControl Margin="20">
        <TabItem Header="{ext:Localize Tab_BatteryInfo}">
            <views:BatteryInfoView DataContext="{Binding ControllerInfo.BatteryInfo}" />
        </TabItem>

        <TabItem Header="{ext:Localize Tab_Settings}">
            <views:SettingsView DataContext="{Binding Settings}" />
        </TabItem>

        <TabItem Header="{ext:Localize Tab_About}">
            <StackPanel>
                <TextBlock Text="{Binding AppName}" FontSize="18" FontWeight="Bold" />
                <TextBlock Text="{Binding AppDescription}" Margin="0,10,0,0" />
                <TextBlock Text="{ext:Localize About_Version}" Margin="0,10,0,0" />
                <TextBlock Text="{Binding AppVersion}" FontSize="16" />
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
