<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ControllerMonitor.ViewModels"
        xmlns:ext="clr-namespace:ControllerMonitor.Extensions"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="ControllerMonitor.Views.SettingsView"
        x:DataType="vm:SettingsViewModel">

    <StackPanel>
        <CheckBox Content="{ext:Localize Settings_StartMinimized}" IsChecked="{Binding StartMinimized}" Margin="0,10,0,0" />
        <CheckBox Content="{ext:Localize Settings_MinimizeToTray}" IsChecked="{Binding MinimizeToTray}" Margin="0,10,0,0" />
        
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="{ext:Localize Settings_UpdateFrequency}" VerticalAlignment="Center" />
            <NumericUpDown Value="{Binding UpdateFrequencySeconds}" Minimum="1" Maximum="60" Width="100" Margin="10,0,0,0" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="{ext:Localize Settings_Theme}" VerticalAlignment="Center" />
            <ComboBox SelectedItem="{Binding Theme}" Width="120" Margin="10,0,0,0">
                <x:String>Auto</x:String>
                <x:String>Light</x:String>
                <x:String>Dark</x:String>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="{ext:Localize Settings_Language}" VerticalAlignment="Center" />
            <ComboBox SelectedItem="{Binding Language}" Width="200" Margin="10,0,0,0">
                <x:String>Auto</x:String>
                <x:String>English</x:String>
                <x:String>Español (Spanish)</x:String>
                <x:String>Deutsch (German)</x:String>
                <x:String>Français (French)</x:String>
                <x:String>Magyar (Hungarian)</x:String>
                <x:String>Português (Portuguese)</x:String>
            </ComboBox>
        </StackPanel>

        <CheckBox Content="{ext:Localize Settings_HideTrayIcon}"
                    IsChecked="{Binding HideTrayIconWhenDisconnected}"
                    Margin="0,10,0,0" />

        <Border BorderThickness="1" CornerRadius="3" BorderBrush="{DynamicResource SystemControlForegroundBaseHighBrush}" Padding="10" Margin="0,10,0,0">
            <StackPanel>
                <TextBlock Text="{ext:Localize Settings_Notifications}" />
                <CheckBox Content="{ext:Localize Settings_NotifyConnected}" IsChecked="{Binding NotifyOnControllerConnected}" Margin="0,10,0,0" />
                <CheckBox Content="{ext:Localize Settings_NotifyDisconnected}" IsChecked="{Binding NotifyOnControllerDisconnected}" Margin="0,10,0,0" />
                <CheckBox Content="{ext:Localize Settings_NotifyLowBattery}" IsChecked="{Binding NotifyOnBatteryLow}" Margin="0,10,0,0" />
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>